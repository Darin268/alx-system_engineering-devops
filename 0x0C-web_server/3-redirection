#!/usr/bin/env bash
# This script configures Nginx on an Ubuntu machine to redirect /redirect_me to another page with a 301 Moved Permanently status.

# Install Nginx if not already installed
if ! command -v nginx &> /dev/null; then
    apt-get update
    apt-get install -y nginx
fi

# Add redirection rule to Nginx configuration
sed -i '/server_name _;/a \
    location /redirect_me { \
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4; \
    }' /etc/nginx/sites-available/default

# Restart Nginx
kill -s HUP $(cat /var/run/nginx.pid)
