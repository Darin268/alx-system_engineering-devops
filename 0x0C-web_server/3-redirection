#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page with a 301 Moved Permanently status

# Update package index
sudo apt-get update

# Install Nginx if not already installed
sudo apt-get install -y nginx

# Remove the default configuration file to avoid conflicts
sudo rm /etc/nginx/sites-enabled/default

# Create a configuration snippet for the redirection
sudo tee /etc/nginx/conf.d/redirect_me.conf >/dev/null <<EOF
server {
    listen 80;
    server_name _;
    location = /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Restart Nginx to apply the configuration
sudo service nginx restart

echo "Nginx configured to redirect /redirect_me to another page with a 301 Moved Permanently status."
